@{
    ViewData["Title"] = "Perfil";
    ViewData["Username"] = @ViewBag.NomeUtilizador;
    ViewData["Email"] = @ViewBag.EmailUtilizador;
    ViewData["Telemovel"] = @ViewBag.NumeroTelemovel;
    Layout = "~/Views/Shared/_LayoutTerminarSessao.cshtml";
}

<footer id="footer" style="max-height:100%; padding-top: 10%">
    <h2 style="font-size: 56px; text-align:center"><b>@ViewData["Username"]</b></h2>
    @using (Html.BeginForm())
    {
        <div class="information" style="padding-top: 5%; text-align: center; font-size: 20px">
            <b>Username</b><br>
            @ViewData["Username"]
        </div>
        <div class="information" style="padding-top: 5%; text-align: center; font-size: 20px">
            <b>E-mail</b><br>
            @ViewData["Email"]
        </div>
        <div class="information" style="padding-top: 5%; text-align: center; font-size: 20px">
            <b>Núemero Telemóvel</b><br>
            @ViewData["Telemovel"]
        </div>
     }
</footer>